@model LibraryManagementSystem.Models.bor

@{
    ViewBag.Title = "Borrow a Book";
}

<h2>Borrow a Book</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.UserId)
        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserId)
    </div>

    <div class="form-group">
        @Html.Label("Book Title")
        @Html.DropDownListFor(m => m.BookId, (SelectList)ViewBag.BookList, "Select a book", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BookId)
    </div>

    <button type="submit" class="btn btn-success">Borrow</button>
}
