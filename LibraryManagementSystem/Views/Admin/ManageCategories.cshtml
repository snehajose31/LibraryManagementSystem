@model IEnumerable<LibraryManagementSystem.Models.Category>
@{
    ViewBag.Title = "Manage Categories";
}

<h2>Manage Categories</h2>

<!-- Button to add a new category -->
<button onclick="location.href='@Url.Action("AddCategory", "Admin")'" class="btn btn-primary">Add Category</button>

<table class="table table-striped table-bordered mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>
                    <!-- Optional: Delete button -->
                    <button class="btn btn-danger" onclick="if(confirm('Are you sure you want to delete this category?')) location.href='@Url.Action("DeleteCategory", "Admin", new { id = category.CategoryId })'">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
