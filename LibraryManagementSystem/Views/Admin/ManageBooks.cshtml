@model IEnumerable<LibraryManagementSystem.Models.Book>
@{
    ViewBag.Title = "Manage Books";
}

<h2>Manage Books</h2>

<button onclick="location.href='@Url.Action("AddBook", "Admin")'" class="btn btn-primary">Add Book</button>

<table class="table table-striped table-bordered mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Year</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>@book.PublicationYear</td>
                <td>@book.Category.Name</td>
                <td>
                    <a href="@Url.Action("EditBook", "Admin", new { id = book.BookId })" class="btn btn-warning">Edit</a>
                    <button class="btn btn-danger" onclick="if(confirm('Are you sure you want to delete this category?')) location.href='@Url.Action("DeleteBook", "Admin", new { id = book.BookId })'">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
