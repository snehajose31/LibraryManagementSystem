@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null; // Do not inherit from any layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            display: flex;
            min-height: 100vh;
            background-color: #ecf0f1; /* Light background for the body */
        }

        /* Sidebar styling */
        .sidebar {
            width: 220px;
            background-color: #2c3e50; /* Dark blue background */
            padding: 20px;
            color: white;
            position: fixed;
            height: 100%;
            box-shadow: 2px 0 5px rgba(0,0,0,0.5); /* Shadow effect for sidebar */
        }

            .sidebar h2 {
                font-size: 1.5em;
                color: #ecf0f1;
                text-align: center;
                margin-bottom: 20px; /* Margin below header */
            }

            .sidebar button {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                font-size: 1em;
                background-color: #34495e; /* Button background */
                color: white;
                border: none;
                border-radius: 5px; /* Rounded corners */
                cursor: pointer;
                transition: background 0.3s ease;
            }

                .sidebar button:hover {
                    background-color: #2980b9; /* Change color on hover */
                }

        /* Main content styling */
        .main-content {
            margin-left: 240px; /* Leave space for the sidebar */
            padding: 20px;
            flex: 1; /* Allow it to grow */
        }

            .main-content h2 {
                color: #34495e; /* Header color */
            }

            .main-content p {
                font-size: 1.1em; /* Slightly larger paragraph text */
                line-height: 1.6; /* Improve readability */
            }

        /* Footer styling */
        .footer {
            background-color: #2c3e50; /* Match sidebar color */
            color: #ecf0f1; /* Light text color */
            text-align: center;
            padding: 10px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Menu</h2>
        <button onclick="location.href='@Url.Action("ManageBooks", "Admin")'">Manage Books</button>
        <button onclick="location.href='@Url.Action("ManageCategories", "Admin")'">Manage Categories</button>
        <button onclick="location.href='@Url.Action("ManageUsers", "Admin")'">Manage Members</button>
        <button onclick="location.href='@Url.Action("ManageIssuedBooks", "Admin")'">Issue/Return Management</button>
        <button onclick="location.href='@Url.Action("ManageFines", "Admin")'">Fines Management</button>
        <button onclick="location.href='@Url.Action("GenerateAlerts", "Admin")'">Overdue Alerts</button>
        <button onclick="location.href='@Url.Action("Logout", "Account")'" class="btn btn-danger mt-4">Logout</button>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h2>Welcome to the Admin Dashboard</h2>
        <p>Here you can manage all aspects of the library, including book management, member management, and more.</p>
        <!-- Additional content specific to the selected action can go here -->
    </div>


</body>
</html>
