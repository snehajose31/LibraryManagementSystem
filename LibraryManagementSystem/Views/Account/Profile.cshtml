@model LibraryManagementSystem.Models.User

@{
    ViewBag.Title = "User Profile";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Container styling */
        .profile-container {
            width: 400px;
            margin: 50px auto; /* Center the container */
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            background-color: #f9f9f9;
        }

        /* Profile icon styling */
        .profile-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 20px;
            border: 2px solid #003300; /* Optional border */
        }

        /* Text styling */
        .profile-details p {
            font-size: 16px;
            color: #333;
        }

        .profile-details strong {
            color: #003300;
        }

        /* Back to dashboard link */
        .back-link {
            display: inline-block;
            margin-top: 15px;
            padding: 8px 15px;
            background-color: #003300;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            .back-link:hover {
                background-color: #005500;
            }
    </style>
</head>
<body>

    <div class="profile-container">
        <!-- Profile Icon -->
       <img src="/Images/user.png" alt="Profile Icon" class="profile-icon" />

        <!-- User Profile Details -->
        <div class="profile-details">
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone Number:</strong> @Model.Phone</p>
            <!-- Add more fields as necessary -->
        </div>

        <!-- Back to Dashboard Link -->
        <a href="@Url.Action("UserDashboard", "Account")" class="back-link">Back to Dashboard</a>
    </div>

</body>
</html>
