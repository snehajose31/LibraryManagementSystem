@model LibraryManagementSystem.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        /* Full screen wrapper with background image */
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('/Images/book4.jpg') no-repeat center center fixed;
            background-size: cover; /* or 'contain' */
            
        }

        /* Wrapper for centering the container */
        .wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100vh;
            background: rgba(255, 255, 255, 0); /* Light overlay for readability */
            
        }

        /* Centered container styling */
        .container1 {
            width: 300px;
            padding: 30px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

        h2 {
            color: #333;
            margin-bottom: 1.5em;
        }

        /* Form group styling */
        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            font-weight: bold;
            color: #555;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1em;
            box-sizing: border-box;
        }

        /* Button styling */
        button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1em;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #45a049;
            }

        /* Error message styling */
        .error-message {
            color: #ff4d4d;
            margin-top: 15px;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="container1">
            <h2>Login</h2>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.Label("Username")
                    @Html.TextBox("username", null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Password")
                    @Html.Password("password", null, new { @class = "form-control" })
                </div>

                <button type="submit">Login</button>
            }

            @if (ViewBag.Error != null)
            {
                <p class="error-message">@ViewBag.Error</p>
            }
        </div>
    </div>
</body>
</html>
